@import '/style/style.wxss';
@import '/style/iconfont.wxss';

.news-li {
  background-color: #fff;
  border-bottom: 2rpx solid #dde2e7;
}

.news-li.first {
  color: #fff;
  height: 450rpx;
  display: flex;
  align-items: flex-end;
  position: relative;
}


.news-li.first .img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #007b43;
}

.news-li.first .title {
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
  padding: 12rpx 24rpx;
}

.news-li.first .about {
  justify-content: center;
  padding: 12rpx 24rpx 35rpx;
}

.news-li.first .about .a-txt {
  font-size: 18rpx;
  color: rgba(255, 255, 255, .62);
  align-items: center;
  display: flex;
}
.news-li.first .about .iconfont{
  margin-right: 8rpx;
  font-size: 22rpx;
}

.news-li.first .about .time {
  padding-right: 22rpx;
  position: relative;
}

.news-li.first .about .time::after {
  content: "";
  position: absolute;
  height: 18rpx;
  right: 0;
  top: calc(50% - 9rpx);
  border-right: 2rpx solid rgba(255, 255, 255, .62);
}

.news-li.first .about .read {
  padding-left: 20rpx;
}

