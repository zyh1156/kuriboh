page,
view,
form,
input,
button,
textarea,
picker,
text,
image,navigator {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
page,
input,
textarea {
  font: 24rpx/1 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif;
  background-color: #e1e5ea;
}

label {
  display: inline-block;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

textarea.form-control {
  min-height: 72rpx;
}