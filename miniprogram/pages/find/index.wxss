.menu {
  color: #fff;
  background-color: #15191d;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
}

.menu .menu-li {
  font-size: 22rpx;
  padding: 20rpx 0 22rpx;
  position: relative;
}

.menu .menu-li.active::after {
  content: "";
  position: absolute;
  border-color: transparent transparent #fff transparent;
  border-style: solid;
  border-width: 0 14rpx 14rpx;
  bottom: 0;
  left: calc(50% - 14rpx);
}

.news-ul {
  margin-top: 84rpx;
  border-top: 3px solid #dde2e7;
}

.news-ul .news-li {
  background-color: #fff;
  border-bottom: 3px solid #dde2e7;
}

.news-ul .news-li.first {
  color: #fff;
  height: 450rpx;
  display: flex;
  align-items: flex-end;
  position: relative;
}

.news-ul .news-li.second {
  height: 150rpx;
}


.news-ul .news-li.first .img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #007b43;
}

.news-ul .news-li.first .title {
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
  padding: 12rpx 24rpx;
}

.news-ul .news-li.first .about {
  justify-content: center;
  padding: 12rpx 24rpx 35rpx;
}

.news-ul .news-li.first .about .a-txt {
  font-size: 18rpx;
  color: rgba(255, 255, 255, .62);
}

.news-ul .news-li.first .about .time {
  padding-right: 22rpx;
  position: relative;
}

.news-ul .news-li.first .about .time::after {
  content: "";
  position: absolute;
  height: 18rpx;
  right: 0;
  top: 0;
  border-right: 2rpx solid rgba(255, 255, 255, .62);
}

.news-ul .news-li.first .about .read {
  padding-left: 20rpx;
}
.news-ul .news-li.second .img{
  width: 225rpx;
  height: 144rpx;
  background-color: #007bbb;
  flex-shrink: 0;
}
.news-ul .news-li.second .text{
  padding: 30rpx 32rpx 24rpx;
}
.news-ul .news-li.second .title{
