@import '/style/style.wxss';

.first {
  margin-top: 20rpx;
}

.first .cover {
  height: 400rpx;
  padding: 48rpx 60rpx;
}

.cover {
  position: relative;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.cover .img {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.first .title {
  font-size: 26rpx;
  line-height: 1.5;
  font-weight: bold;
  color: #fff;
  position: relative;
  z-index: 5;
}

.card-list {
  display: flex;
  flex-wrap: wrap;
  border-top: 2rpx solid #dde2e7;
}

.card-list .list-li {
  width: 375rpx;
  border-color: #dde2e7;
  border-style: solid;
}
.card-list .list-li:nth-child(odd){
  border-width: 2rpx 2rpx 2rpx 0;
}
.card-list .list-li:nth-child(even){
  border-width: 2rpx 0 2rpx 2rpx;
  
}
.list-li .cover{
  height: 200rpx;
  padding: 24rpx 30rpx;
}
.list-li .title {
  color: #fff;
  position: relative;
  z-index: 5;
}